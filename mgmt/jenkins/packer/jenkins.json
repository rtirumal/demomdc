{
  "variables": {
    "aws_region": "us-east-1",
    "subnet_id": "subnet-0abbd820dfe388ba3",
    "github_auth_token": "{{env `GITHUB_OAUTH_TOKEN`}}"
  },
  "builders": [{
    "ami_name": "jenkins-server-{{isotime | clean_ami_name}}",
    "ami_description": "Amazon Linux 2 AMI that runs Jenkins.",
    "instance_type": "t2.medium",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "amzn2-ami-hvm*",
        "root-device-type": "ebs"
      },
      "owners": [
        "137112412989"
      ],
      "most_recent": true
    },
    "encrypt_boot": false,
    "ssh_username": "ec2-user",
    "ami_users": []
  }],
  "provisioners": [{
    "type": "shell",
    "pause_before": "30s",
    "inline": [
      "sudo yum update -y",
      "sudo yum install -y jq python-pip nvme-cli",
      "sudo pip install awscli",
      "sudo yum install -y https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm",
      "echo 'CentOS' | sudo tee --append /etc/os-release > /dev/null"
    ]
  }, {
    "type": "shell",
    "script": "{{template_dir}}/install-gruntwork-modules.sh",
    "environment_vars": [
      "GITHUB_OAUTH_TOKEN={{user `github_auth_token`}}",
      "AWS_REGION={{user `aws_region`}}"
    ]
  }, {
    "type": "shell",
    "script": "{{template_dir}}/install-build-dependencies.sh"
  }]
}