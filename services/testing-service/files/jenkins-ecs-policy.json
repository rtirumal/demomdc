{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ecs:RegisterTaskDefinition",
        "ecs:ListClusters",
        "ecs:DescribeContainerInstances",
        "ecs:ListTaskDefinitions",
        "ecs:DescribeTaskDefinition"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "ecs:StopTask",
        "ecs:ListContainerInstances"
      ],
      "Resource": "arn:aws:ecs:${aws_region}:${aws_account_id}:cluster/${cluster_name}"
    },
    {
      "Effect": "Allow",
      "Action": [
        "ecs:RunTask"
      ],
      "Resource": "arn:aws:ecs:${aws_region}:${aws_account_id}:task-definition/jenkins-agent:*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "ecs:StopTask",
        "ecs:DescribeTasks"
      ],
      "Resource": "arn:aws:ecs:${aws_region}:${aws_account_id}:task/*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:GetObjectVersion",
        "s3:GetBucketVersioning",
        "s3:List*",
        "s3:PutObject"
      ],
    "Resource": [
      "${aws_s3_jenkins_build_packages_arn}",
      "${aws_s3_jenkins_build_packages_arn}/*",
      "${aws_s3_jenkins_artifacts_arn}",
      "${aws_s3_jenkins_artifacts_arn}/*"
      ]
    }
  ]
}
